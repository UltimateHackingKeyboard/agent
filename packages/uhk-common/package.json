{
  "name": "uhk-common",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "description": "Common Library contains the common code for uhk-agent (electron-main) and web (electron-renderer) modules",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Ultimate Gadget Laboratories",
  "repository": {
    "type": "git",
    "url": "git@github.com:UltimateHackingKeyboard/agent.git"
  },
  "scripts": {
    "build": "run-s -sn build:generate-versions build:user-config build:tsc",
    "build:generate-versions": "node ./scripts/generate-versions.mjs",
    "build:tsc": "tsc --project src/tsconfig.build.json",
    "build:user-config": "tsx ./scripts/generate-user-configs.ts",
    "clean": "rimraf ./node_modules ./dist user-config.json",
    "test": "cross-env NODE_OPTIONS=--loader=ts-node/esm jasmine --config=jasmine.json",
    "coverage": "nyc npm test",
    "lint": "eslint"
  },
  "dependencies": {
    "buffer": "6.0.3",
    "lodash.isequal": "4.5.0",
    "md5": "2.3.0",
    "moment": "2.30.1",
    "semver": "7.7.2",
    "tslib": "2.8.1"
  },
  "license": "GPL-3.0",
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts"
    ],
    "reporter": [
      "lcov"
    ]
  }
}
