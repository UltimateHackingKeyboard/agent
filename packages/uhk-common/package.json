{
  "name": "uhk-common",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "description": "Common Library contains the common code for uhk-agent (electron-main) and web (electron-renderer) modules",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Ultimate Gadget Laboratories",
  "repository": {
    "type": "git",
    "url": "git@github.com:UltimateHackingKeyboard/agent.git"
  },
  "scripts": {
    "build": "run-s tsc copy:*",
    "clean": "rimraf ./node_modules ./dist",
    "tsc": "tsc --project ./src/tsconfig.json",
    "copy:scancodes": "copyfiles src/config-serializer/config-items/scancodes.ts dist",
    "test": "cross-env NODE_OPTIONS=--loader=ts-node/esm jasmine --config=jasmine.json",
    "coverage": "nyc npm test",
    "lint": "eslint --ext .ts ."
  },
  "dependencies": {
    "buffer": "6.0.3",
    "lodash.isequal": "4.5.0",
    "md5": "2.3.0",
    "moment": "2.29.4",
    "semver": "7.3.7",
    "tslib": "2.3.1"
  },
  "license": "GPL-3.0",
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts"
    ],
    "reporter": [
      "lcov"
    ]
  }
}
