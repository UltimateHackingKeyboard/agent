    "lint": "tslint --project tsconfig.json",
    "install:build-deps": "cd ./dist && npm i",
    "download-firmware": "node ../../scripts/download-firmware.js",
    "copy-to-tmp-folder": "node ../../scripts/copy-to-tmp-folder.js",
    "webpack": "webpack"
  }
}
