    "node": ">=8.1.0 <9.0.0",
    "npm": ">=5.1.0 <6.0.0"
  },
  "dependencies": {
    "command-line-args": "4.0.6",
    "electron": "1.7.5",
    "electron-is-dev": "0.1.2",
    "electron-log": "2.2.6",
    "electron-rebuild": "1.6.0",
    "electron-settings": "3.0.14",
    "electron-updater": "2.2.0",
