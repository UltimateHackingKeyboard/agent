{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "./",
    "target": "es6",
    "types": [
      "node"
    ]
  },
  "paths": {
    "@angular/*": ["../node_modules/@angular/*"],
    "rxjs/*": ["../node_modules/rxjs/*"]
  },
  "files": [
    "main-web.ts",
    "polyfills.ts"
  ],
  "exclude": [
    "main-renderer.ts",
    "renderer",
    "test.ts",
    "**/*.spec.ts"
  ]
}
